<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b19cd9"
    tools:context=".MainActivity">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

      <TextView
          android:id="@+id/title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Popular Streamers"
          android:textSize="30dp"
          android:textStyle="bold"
          android:gravity="center"
          android:textColor="#000000" />

      <ImageButton
          android:id="@+id/button_lupo"
          android:layout_width="250dp"
          android:layout_height="250dp"
          android:layout_marginTop="20dp"
          android:layout_gravity="center"
          app:srcCompat="@drawable/drlupo" />

      <TextView
          android:id="@+id/text_lupo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Dr Lupo"
          android:textSize="20dp"
          android:textStyle="bold"
          android:gravity="center"
          android:textColor="#000000" />

      <ImageButton
          android:id="@+id/button_ninja"
          android:layout_width="250dp"
          android:layout_height="250dp"
          android:layout_marginTop="20dp"
          android:layout_gravity="center"
          app:srcCompat="@drawable/ninja" />

      <TextView
          android:id="@+id/text_ninja"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Ninja"
          android:textSize="20dp"
          android:textStyle="bold"
          android:gravity="center"
          android:textColor="#000000"/>

      <ImageButton
          android:id="@+id/button_pokimane"
          android:layout_width="250dp"
          android:layout_height="250dp"
          android:layout_marginTop="20dp"
          android:layout_gravity="center"
          app:srcCompat="@drawable/pokimane" />

      <TextView
          android:id="@+id/text_pokimane"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Pokimane"
          android:textSize="20dp"
          android:textStyle="bold"
          android:gravity="center"
          android:textColor="#000000"/>

    </LinearLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>